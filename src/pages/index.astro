---
import ProjectCard from '@/components/ProjectCard.astro';
import TechIcons from '@/components/TechIcons.astro';
import Layout from '@/layouts/Layout.astro';
import { tech_names } from 'data/tech-icon-list';
import type { ProjectsFM } from 'types/frontmatter';

const projects = await Astro.glob<ProjectsFM>('./projects/*.mdx');

---

<Layout title="Fazza Razaq Amiarso">
	<main class="mt-12">
		<h1 class="text-primary-red text-4xl mb-8">Hi, I'm <span>Fazza Razaq Amiarso</span></h1>
		<div class="mb-12 ">
			<h2 class="text-2xl ">Techs</h2>
			<p class="mb-6 text-secondary-text">Some of tech that I've used or have worked with.</p>
			<div class="flex items-center gap-6 flex-wrap justify-evenly">{tech_names.map(name =>
				<TechIcons iconName={name} />
				)
				}
			</div>
		</div>
		<h2 id="featured-projects" class="text-2xl ">Projects</h2>
		<p class="mb-6 text-secondary-text">My featured works, in detail.</p>
		<ul
			class="flex flex-col w-full gap-4 lg:gap-0 sm:justify-evenly sm:flex-row sm:flex-wrap lg:justify-evenly place-content-center">
			{projects.map(project => {
			return (
			<ProjectCard {...project.frontmatter} />
			)
			})}
		</ul>
	</main>
</Layout>