---
import ProjectCard from '@/components/ProjectCard.astro';
import Layout from '../layouts/Layout.astro';

type Frontmatter = {
	cover: string,
	title: string,
	description: string,
}

const projects = await Astro.glob<Frontmatter>('./projects/*.mdx')
